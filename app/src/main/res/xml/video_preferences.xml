<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreferenceCompat
        android:key="vsync_preference"
        android:title="Enable VSync"
        android:icon="@drawable/picture_center_vector"
        android:summary="Synchronize rendering with monitor refresh rate" />

    <SwitchPreferenceCompat
        android:key="fps_preference"
        android:title="Show FPS Counter"
        android:icon="@drawable/fps_vector"
        android:summary="Synchronize rendering with monitor refresh rate" />

    <ListPreference
        android:key="dmg_palette"
        android:title="DMG Palette"
        android:entries="@array/dmg_palette_names"
        android:entryValues="@array/dmg_palette_values"
        android:icon="@drawable/palette_vector"
        android:defaultValue="classic" />

    <ListPreference
        android:key="gbc_palette"
        android:title="GBC Palette"
        android:entries="@array/gbc_palette_names"
        android:entryValues="@array/gbc_palette_values"
        android:icon="@drawable/palette_vector"
        android:defaultValue="default" />


</PreferenceScreen>